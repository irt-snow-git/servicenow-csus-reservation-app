        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {

	// Add your code here
	var dateTime_start = current.start.getDisplayValue().split(' ');

	// pretty date format
	var monthNames = [
		"January", "February", "March",
		"April", "May", "June", "July",
		"August", "September", "October",
		"November", "December"
	];
	var dateparts = dateTime_start[0].split('-');
	
	var day = dateparts[2]*1;
	var monthIndex = dateparts[1]*1;
	var year = dateparts[0]*1;
	current.date =  monthNames[monthIndex - 1] + ' ' + day + ', ' + + year;
	
	// pretty time
	var timeParts = dateTime_start[1].split(':');
	var meridian = "AM";
	var hour = timeParts[0]*1;
	if (timeParts[0] > 12 ) {
		meridian = "PM";
		hour = timeParts[0] - 12;
	}
	current.time = hour + ":" + timeParts[1] + " " + meridian;
	


})(current, previous);]]></script>
